<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/schema/etc/schema.xsd">
	<table name="dtn_catalog_ingredient" resource="default" engine="innodb" comment="Catalog Product Ingredient">
		<column name="entity_id" xsi:type="smallint" unsigned="true" nullable="false" identity="true" />
		<column name="name" xsi:type="varchar" nullable="false" length="255" comment="Name" />
		<column name="description" xsi:type="varchar" nullable="false" length="255" comment="Description" />
		<column name="image" xsi:type="varchar" nullable="true" length="255" comment="Image" />
		<constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
	</table>
</schema>